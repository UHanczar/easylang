.form
  &__header
    display inline-block
    padding 5px 10px
    border-top-left-radius 5px
    border-top-right-radius 5px
    background #f6f5f3
    z-index 1
    margin-bottom -1px
  &__body
    padding 5px 10px 10px
    border-top-right-radius 5px
    border-bottom-left-radius 5px
    border-bottom-right-radius 5px
    background #f6f5f3
    box-shadow 0 0 0 1px rgba(0, 0, 0, .1), 0 3px 15px -3px rgba(0, 0, 0, .3)
  &__input
    height 40px
    font-size 18px
    padding 6px 12px
    //font-size 14px
    line-height 1.42857143
    color #555
    background-color #fff
    background-image none
    border 1px solid #ccc
    border-radius 4px
  &Hero
    display inline-block
    &__item
      width 260px
      margin-top 5px
      margin-right 5px