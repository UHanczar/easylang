.navbar
  position fixed
  top 0
  left 0
  right 0
  display flex
  height 70px
  z-index 10
  &__content
    display flex
    align-items center
    justify-content center
    background #fff
  &__wrap
    display flex
    justify-content space-between
    width 100%
    @media (min-width 960px)
      max-width 960px
  &__brand
    margin-right auto
    display flex
    align-items center
    img
      height 32px
  &__menu
    @media (max-width 992px)
      display none;
  &__phone
    margin-left auto
